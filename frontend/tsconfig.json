{
    "include": ["app/components/**/*", "app/containers/**/*"],
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "exclude": ["node_modules", "tsDist", "dist", "webpack.config.js"]
}
